
#   DATA ANALYSIS MINI PROJECT
# ===============================

import pandas as pd
import seaborn as sns
import matplotlib.pyplot as plt
from sklearn.datasets import load_iris


# TASK 1: LOAD & EXPLORE DATASET

try:
    # Load the Iris dataset from sklearn
    iris = load_iris()

    # Convert to DataFrame
    df = pd.DataFrame(iris.data, columns=iris.feature_names)
    df['species'] = iris.target  # Add species column

    print("=== First 5 Rows of Dataset ===")
    print(df.head())  # Show first rows

    print("\n=== Dataset Info ===")
    print(df.info())  # Structure of dataset

    print("\n=== Missing Values Check ===")
    print(df.isnull().sum())  # Missing values

    # Clean dataset (fill missing values)
    df = df.fillna(df.mean(numeric_only=True))

except FileNotFoundError:
    print("Error: Dataset file not found!")
except Exception as e:
    print("An error occurred while loading the dataset:", e)


# TASK 2: BASIC DATA ANALYSIS


print("\n=== Basic Statistics ===")
print(df.describe())  # Summary statistics

print("\n=== Mean of Numerical Columns Grouped by Species ===")
group_mean = df.groupby("species").mean()
print(group_mean)

print("\n=== Observations ===")
print("• Each species shows different flower measurements.")
print("• Petal length and width differentiate species clearly.")
print("• Setosa species has the smallest petal sizes.")


# TASK 3: DATA VISUALIZATION


sns.set_style("whitegrid")  # Nice visual style

# 1. Line Chart
plt.figure(figsize=(8, 4))
plt.plot(df['sepal length (cm)'], label='Sepal Length')
plt.title("Line Chart: Sepal Length Trend")
plt.xlabel("Index")
plt.ylabel("Sepal Length (cm)")
plt.legend()
plt.show()

# 2. Bar Chart
plt.figure(figsize=(8, 4))
group_mean['petal length (cm)'].plot(kind='bar')
plt.title("Bar Chart: Average Petal Length per Species")
plt.xlabel("Species")
plt.ylabel("Petal Length (cm)")
plt.show()

# 3. Histogram
plt.figure(figsize=(8, 4))
plt.hist(df['sepal width (cm)'], bins=15)
plt.title("Histogram: Distribution of Sepal Width")
plt.xlabel("Sepal Width (cm)")
plt.ylabel("Frequency")
plt.show()

# 4. Scatter Plot
plt.figure(figsize=(8, 4))
plt.scatter(df['sepal length (cm)'], df['petal length (cm)'])
plt.title("Scatter Plot: Sepal Length vs Petal Length")
plt.xlabel("Sepal Length (cm)")
plt.ylabel("Petal Length (cm)")
plt.show()
